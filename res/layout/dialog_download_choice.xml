<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/dialog_padding_view">
		
		<RadioGroup
			android:id="@+id/download_choice"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			android:orientation="vertical">
			
		    <RadioButton
				android:id="@+id/download_common"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true" />
			
		    <RadioButton
				android:id="@+id/download_subdirectory"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/text_download_to_subdirectory" />
			
		</RadioGroup>
		
	    <CheckBox
			android:id="@+id/download_detail_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/preference_download_detail_name" />
		
	    <CheckBox
			android:id="@+id/download_original_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/preference_download_original_name" />
		
		<com.mishiranu.dashchan.widget.ForcedAutoCompleteTextView
			android:id="@android:id/text1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:singleLine="true" />
		
		<View
			android:layout_width="320dp"
			android:layout_height="0dp" />
		
	</LinearLayout>
	
</ScrollView>